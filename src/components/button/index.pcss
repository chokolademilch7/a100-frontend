@import "../../tools/all.pcss";

.button {
  padding: 10px;
  background-color: $orange;
  border-radius: 10px;
  box-shadow: 0px 9px 8px -5px rgba(0,0,0,0.25);
  color: $white;
  text-align: center;
}

:host([class="clicked"]) .button {
  -webkit-transform: translateY(4px);
  transform: translateY(4px);/*下に動く*/
  box-shadow: none;
}
